{
  "name": "portfolio-infrastructure",
  "version": "1.0.0",
  "description": "Full-stack professional portfolio on Cloudflare infrastructure",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "pages:dev": "wrangler pages dev .next --compatibility-date=2024-01-01",
    "pages:build": "next build",
    "pages:deploy": "npm run pages:build && wrangler pages deploy .next",
    "d1:create": "wrangler d1 create portfolio-db",
    "d1:init": "wrangler d1 execute portfolio-db --file=./schema.sql",
    "d1:query": "wrangler d1 execute portfolio-db --command",
    "r2:create": "wrangler r2 bucket create portfolio-files"
  },
  "keywords": [
    "portfolio",
    "cloudflare",
    "workers",
    "d1",
    "r2",
    "pages",
    "nextjs",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "wrangler": "^3.78.0",
    "@cloudflare/next-on-pages": "^1.13.5"
  }
}
