{
  "name": "portfolio-infrastructure",
  "version": "1.0.0",
  "description": "Full-stack professional portfolio on Cloudflare infrastructure",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:worker": "opennextjs-cloudflare build",
    "start": "next start",
    "preview": "wrangler dev",
    "deploy": "npm run build:worker && wrangler deploy",
    "d1:create": "wrangler d1 create portfolio-db",
    "d1:init": "wrangler d1 execute portfolio-db --file=./schema.sql",
    "d1:query": "wrangler d1 execute portfolio-db --command",
    "r2:create": "wrangler r2 bucket create portfolio-files"
  },
  "keywords": [
    "portfolio",
    "cloudflare",
    "workers",
    "d1",
    "r2",
    "pages",
    "nextjs",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.1.1",
    "jsonwebtoken": "^9.0.3",
    "next": "^15.0.0",
    "pdfjs-dist": "^5.4.449",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-pdf": "^10.2.0"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.14.6",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "wrangler": "^4.54.0"
  }
}
